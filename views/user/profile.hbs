<div class="container">
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <hr />
    <h1>Order History</h1>
    {{# each orders }}
    <div class="panel panel-default">
        <div class="panel-body">
            <ul class="list-group">
              {{# each this.items}}
                <li class="list-group-item">
                <span class="badge">${{this.price}}</span>
                {{this.title}} | {{this.qty}} Units
                </li>
              {{/each}}
            </ul>
        </div>
        <div class="panel-footer"><strong>Total Price: ${{this.cart.totalPrice}}</strong></div>
    {{/each}}
  </div>
  </div>
</div>
</div>
