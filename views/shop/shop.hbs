<div class="container">
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-2 col-sm-offset-3">
    <div id="success" class="alert-success {{#if noMessages}}hidden{{/if}}">
      {{ successMsg }}
    </div>
  </div>
</div>

{{# each products }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-6">
    <div class="thumbnail">
      <img src="{{ this.imagePath }}"
          class="img-responsive" alt="...">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">{{ this.description}}</p>
        <div class="clearfix">
            <div class="price pull-left">{{ this.price }}</div>
            <a href="/add-to-cart/{{this._id}}/large" class="btn btn-default pull-right" role="button">L</a>
            <a href="/add-to-cart/{{this._id}}/medium" class="btn btn-default pull-right" role="button">M</a>
            <a href="/add-to-cart/{{this._id}}/small" class="btn btn-default pull-right" role="button">S</a>
            </div>
        </div>
      </div>
    </div>
  {{/each}}
  </div>
{{/each}}
</div>
