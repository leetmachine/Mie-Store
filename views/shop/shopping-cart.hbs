{{# if products }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{# each products}}
          <li class="list-group-item">
            <span class="badge">{{ this.qty}}</span>
            <strong>{{this.item.title}}</strong>
            <a class="btn btn-primary" href="/remove/{{this.item._id}}">Remove All</a>
            <ul class="list-group">
              {{# each this.size}}
              {{#if this}}<li class="list-group-item"> {{@key}}: {{this}}
                <a class="btn btn-default pull-right" href="/reduce/{{../item._id}}/{{@key}}">Reduce</a>
              </li>{{/if}}
              {{/each}}
            </ul>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total: {{this.totalPrice}}</strong>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
  </div>
{{ else}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <h2>No Items in Cart</h2>
    </div>
  </div>
{{/if}}
